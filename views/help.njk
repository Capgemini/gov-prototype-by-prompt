{% extends "template.njk" %}

{% block pageTitle %}
  {{ title }} – User guide – Gov Prototype by Prompt
{% endblock %}

{% block content %}
  <style>
    nav ul li {
      padding-top: 10px;
      line-height: 1.3;
      margin-bottom: 0 !important;
    }
    @media (min-width: 40.0625em) {
      nav ul li {
          padding-top: 7.5px;
      }
    }
  </style>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        User guide
      </h1>

      <aside role="complementary">
        <nav aria-label="Pages in this guide" role="navigation">
          <span class="govuk-body-s">Contents</span>
          <ul class="govuk-list govuk-list--bullet">
            {% for item in tableOfContents %}
              <li class="govuk-body-s" {% if item.current %}aria-current="true"{% endif %}>
                {% if item.current %}
                  {{ item.title }}
                {% else %}
                  <a href="{{ item.url }}">
                    {{ item.title }}
                  </a>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </nav>
      </aside>
      <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
    </div>
  </div>

  

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ helpFileMarkdown | govukMarkdown({"headingsStartWith": "m"}) | safe }}

      {{ govukPagination(pagination) }}
    </div>
  </div>
{% endblock %}
